---
interface Props {
    // la estructura de los datos
    title: string;
    price: number;
    img: string;
}

const { title, price, img } = Astro.props;
---

<div class="border p-4 rounded-lg hover:scale-105 duration-300 cursor-pointer bg-">
    <img src={img} alt="" />
    <p>{title}</p>
    <p class="text-red-600">{price}$</p>
</div>
 <style>
    img{
        width: 100%;
        height: 320px;
        object-fit: cover;
    }
 </style>