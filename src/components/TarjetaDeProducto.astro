---
interface Props {
    // la estructura de los datos
    title: string;
    price: number;
    img: string;
}

const { title, price, img } = Astro.props;
---

<div>
    <img src={img} alt="" />
    <p>{title}</p>
    <p>{price}$</p>
</div>
 <style>
    img{
        width: 100%;
        height: 320px;
        object-fit: cover;
    }
 </style>